#!/bin/bash
set -euo pipefail
export FTL_DIR="$(dirname "$(readlink -f "$0")")/.."
if [ ! "${HERMIT_ENV}" -ef ${FTL_DIR} ]; then
  . "${FTL_DIR}/bin/activate-hermit"
fi

name="$(basename "$0")"
dest="${FTL_DIR}/build/devel"
src="./cmd/${name}"
if [ "${name}" = "ftl" ]; then
  src="./frontend/cli"
fi
mkdir -p "$dest"
(cd "${FTL_DIR}/${src}" && "${FTL_DIR}/bin/go" build -ldflags="-s -w -buildid=" -o "$dest/${name}" .) && exec "$dest/${name}" "$@"
